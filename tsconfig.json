{
    "compilerOptions": {
      "target": "es5",
      "lib": ["esnext"],
      "allowJs": true,
      "checkJs": true,
      "skipLibCheck": false,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "module": "esnext",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "moduleResolution": "node"
    },
    "include": ["**/*.js", "**/*.ts"],
    "exclude": ["node_modules"]
}
